<UserControl x:Class="MobileSandbox.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
      <Button x:Name="FillButton"
              Padding="10"
              Content="Fill"
              Foreground="Black"
              Background="LightGray"
              Tapped="Fill" />
      <Button x:Name="FillLazyButton"
              Padding="10"
              Content="Fill Lazy"
              Foreground="Black"
              Background="LightGray"
              Tapped="FillLazy" />
    </StackPanel>
    <ContentPresenter x:Name="ContentPresenter2" Margin="0, 50" />
    <JobsVisualizer />
  </Grid>
</UserControl>

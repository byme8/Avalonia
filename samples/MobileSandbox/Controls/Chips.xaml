<ItemsRepeater
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="ControlCatalog.Controls.Chips">
  <ItemsRepeater.Layout>
    <WrapLayout />
  </ItemsRepeater.Layout>
  <ItemsRepeater.ItemTemplate>
    <DataTemplate>
      <Border Background="Red" CornerRadius="10" Margin="4">
        <Label Margin="2" Content="{Binding .}" Padding="2" />
      </Border>
    </DataTemplate>
  </ItemsRepeater.ItemTemplate>
</ItemsRepeater>
